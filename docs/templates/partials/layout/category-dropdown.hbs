<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{pascal name}} <span class="caret"></span></a>
  <ul class="dropdown-menu" id="dropdown-{{name}}">
  {{#each items}}
    {{#isnt this.data.draft true}}
    {{> category-dropdown-link ..}}
    {{/isnt}}
  {{/each}}
  </ul>
</li>
