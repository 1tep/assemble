---
component: navbar
---
<div class="navbar" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="{{!link-to "index"}}/" class="navbar-brand">ASSEMBLE</a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
      {{#each site.categories}}
        {{!log (first (list collection)) }}
        {{#first (list collection)}}
        <li{{#is ../../section.title title}} class="active"{{/is}}> <a href="{{link-to this}}">{{../title}}</a> </li>
        {{/first}}
      {{/each}}
      </ul>
      <ul class="nav navbar-nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Collections <span class="caret"></span></a>
          <ul class="dropdown-menu" id="dropdown-collections">
            {{#collections}}
            <li class="dropdown-header">{{name}}</li>
            {{#collection name}}<li><a href="#">{{inflection}} <span class="badge pull-right">{{items.length}}</span></a></li>{{/collection}}
            {{/collections}}
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Other Versions <span class="caret"></span></a>
          <ul class="dropdown-menu" id="dropdown-versions">
          </ul>
        </li>
        <li{{#is section "Blog"}} class="active"{{/is}}> <a href="{{!link-to "blog"}}/">Blog</a> </li>
        <li><a href="https://github.com/assemble/assemble/archive/master.zip" title="Download Assemble" {{#production}}{{{track.navbar.download}}}{{/production}}><i class="glyphicon glypicon-large glyphicon-download"></i></a></li>
        <li> <a href="https://github.com/assemble/assemble/" {{#production}}{{{track.navbar.click-repo}}}{{/production}}>GitHub Repo</a> </li>
      </ul>
    </nav>
  </div>
</div>
